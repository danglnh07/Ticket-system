{
    "swagger": "2.0",
    "info": {
        "description": "This is the API for ticket and event management system",
        "title": "Ticket and event management API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/payment/config": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Get stripe publishable key",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payment"
                ],
                "summary": "Get stripe publishable key",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/api.StripeConfigResponse"
                        }
                    }
                }
            }
        },
        "/api/payment/intent": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Creates a new payment intent with an amount. Here, we expect amount to be in cent",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payment"
                ],
                "summary": "Create a new payment intent",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "The amount for payment (cents)",
                        "name": "amount",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/api.PaymentIntentResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request body or invalid deadline",
                        "schema": {
                            "$ref": "#/definitions/api.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/api.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "api.PaymentIntentResponse": {
            "type": "object",
            "properties": {
                "secret_key": {
                    "type": "string"
                }
            }
        },
        "api.StripeConfigResponse": {
            "type": "object",
            "properties": {
                "publishable_key": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}